    <body>
<section class="container">
        <h1 align="center">TODO APP</h1>

            <!-- form to create task -->
        <form action="/create-activity" method="POST">

            <table class="table">
                <thead>
                  <tr class="table-active">
                    <th style="border-radius: 20px 0px 0px 20px;">ACTIVITY</th>
                    <th>CATEGORY</th>
                    <th>DATE</th>
                    <th style="border-radius: 0px 20px 20px 0px;"></th>
                  </tr>
                </thead>
            
            
                <tbody>
                    <tr class="list-1">
                      <td> <input type="text" name="description"placeholder="Whats your next activity?" required></input></td>
                      <td >  <select name="category" required>

                        <option>PERSONAL</option>
                        <option>WORK</option>
                        <option>SCHOOL</option>
                        <option>CLEANING</option>
                        <option>OTHER</option>

                             </select>
                     </td>
                     <td  > <input type="date" name="date" style="border-radius: 20px;" required></th>
                      <td><input type="submit" style="font-size: 15px; padding: 2px 5px; border-radius: 10px;" class="btn btn-success"id="add" value="ADD ACTIVITY"></td>
                    </tr>
                </tbody>
            
            </table>
                  
  </form>
    </section>
        <div class="activity-list">          
                <h1 align="center">ACTIVITY LIST</h1>

                <form action="/delete-activity" method="GET">
                    <table class="table">
                        <thead class="list-heading"> 
                            <tr>
                              <th style="border-radius: 20px 0px 0px 20px;">SELECT</th>
                              <th>ACTIVITY</th>
                              <th>CATEGORY</th>
                              <th  style="border-radius: 0px 20px 20px 0px;">DUE DATE</th>
                            </tr>
                          </thead>
                        <% for(let i of activity) { %>
                            

        <tr class="list">
                    <td style="border-radius: 20px 0px 0px 20px; "> <p style="align-items: center; margin-top: 10px;"><input type="checkbox" name="<%= i._id %>" ></p> </td>
                    <td> <p id="task-description"><%= i.description %></p></td>
                    <td > <p id="task-category"><%= i.category %></p> </td>
                    <td style="border-radius: 0px 20px 20px 0px;"><p id="due-date"> <%= i.date %></p></td>
        </tr>
                    
                        <% } %>
                            
                

                           
</table>
<div  align = "center"><input type="submit"  style="font-size: 15px; padding: 2px 5px; border-radius: 10px;" class="btn btn-danger" value="DELETE ACTIVITY">
                </div>></form>

        
            </div>
    </body>
    
